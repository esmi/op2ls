

#echo $#

ver=0.1
if [ $# == 1 ]; then
  case $1 in

  --help) 
      cat <<-EOF
	showpath [ SHELL_VAR | --help ]

	EOF
      exit 0
      ;;
  --version)
	cat <<-EOF
	showpath version: $ver

	write by Evan Chen. 2008-11-13
	EOF
	exit 0
	;;
	
  *)
      result=`set | grep -i ^$1= | sed -e "s/^$1=//g" -e "s/^'//g" -e "s/'$//g"` 
      ;;
  esac
else
  result=$PATH
fi


if [ "$result". == "". ] ; then
  echo $1: content is empty.
else
  echo $result | tr ':' '\n'
fi
